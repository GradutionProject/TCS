@model IEnumerable<TCS.Model.Sensor>
@{
    Layout = null;
}
<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTable no-footer">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.SensorType.Name)</th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.SensorType.Name)</td>
                            <td><a href="#" title="Zoom" class="action" data-action-click="zoom" data-action-parameter="@item.SensorId"><i class="fa fa-search"></i></a></td>
                            <td><a href="#" title="Flash on Map" class="action" data-action-click="flash" data-action-parameter="@item.SensorId"><i class="fa fa-bolt"></i></a></td>
                            <td><a href="#" title="Delete" class="action" data-action-click="delete" data-action-parameter="@item.SensorId"><i class="fa fa-close"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
